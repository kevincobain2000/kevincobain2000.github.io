{
    "compilerOptions": {
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@layouts/*": ["src/layouts/*"],
        "@content/*": ["src/content/*"]
      },
      "target": "ESNext",
      "module": "ESNext",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["@astrojs/image/client"],
      "strict": true,
      "outDir": "./dist"
    }
  }